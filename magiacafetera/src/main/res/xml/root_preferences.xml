
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:title="@string/title_notificacion">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="preference_notificacion"
            android:title="@string/notifications_title"
            android:icon="@drawable/notifications_icon"/>
        <CheckBoxPreference
            app:dependency="preference_notificacion"
            android:defaultValue="false"
            android:key="sound_notificacion"
            android:title="@string/sound_title"
            android:icon="@drawable/notifications_sound_icon"/>
    </PreferenceCategory>




</PreferenceScreen>